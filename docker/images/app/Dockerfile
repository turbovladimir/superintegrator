FROM my-php7.2

#----------------------------------------------------------
# Switch User
#----------------------------------------------------------

RUN useradd -mU app \
    && echo "app ALL=(ALL) NOPASSWD: ALL">> /etc/sudoers \
    && chown -R app:app /var/www

#----------------------------------------------------------
# Switch User
#----------------------------------------------------------

USER app

#----------------------------------------------------------
# Dir
#----------------------------------------------------------
RUN mkdir /var/www/superintegrator
WORKDIR /var/www/superintegrator